{
	"private": true,
	"scripts": {
		"build": "wp-scripts build",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:js": "wp-scripts lint-js",
		"release:chrome": "cd distribution && webstore upload --auto-publish",
		"release:firefox": "cd distribution && web-ext-submit",
		"start:chrome": "web-ext run --target=chromium",
		"start:firefox": "web-ext run",
		"test": "run-s lint:* build",
		"watch": "wp-scripts start"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"globals": [
			"browser"
		],
		"ignores": [
			"distribution"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"webextension-polyfill": "^0.7.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.10",
		"@wordpress/eslint-plugin": "^7.3.0",
		"@wordpress/prettier-config": "^0.4.0",
		"@wordpress/scripts": "^12.5.0",
		"babel-loader": "^8.2.2",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^7.0.0",
		"cross-env": "^7.0.3",
		"daily-version": "^2.0.0",
		"dot-json": "^1.1.0",
		"eslint": "^7.15.0",
		"npm-run-all": "^4.1.5",
		"prettier": "npm:wp-prettier@2.2.1-beta-1",
		"size-plugin": "^2.0.1",
		"stylelint": "^13.8.0",
		"terser-webpack-plugin": "^5.0.3",
		"web-ext": "^5.4.1",
		"web-ext-submit": "^5.4.1",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"keepProfileChanges": true,
			"firefoxProfile": "./test/web-ext-profile",
			"chromiumProfile": "./test/web-ext-profile"
		}
	}
}
